{
  "name": "digikop",
  "version": "1.0.0",
  "description": "Web-based coordination platform for excavation works in Central Bohemian Region",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tangero/digikop.git"
  },
  "homepage": "https://github.com/tangero/digikop",
  "bugs": {
    "url": "https://github.com/tangero/digikop/issues"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/server.ts",
    "dev:mock": "nodemon src/mockServer.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/server.js",
    "start:prod": "npm run migrate && npm run build && npm start",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:prod": "node dist/scripts/migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "lint:frontend": "cd frontend && npm run lint",
    "format:frontend": "cd frontend && npm run format",
    "setup:email": "ts-node src/scripts/setup-email.ts"
  },
  "dependencies": {
    "@sentry/node": "^10.20.0",
    "@sentry/tracing": "^7.120.4",
    "@types/dompurify": "^3.0.5",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.29.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/bcrypt": "^5.0.1",
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/geojson": "^7946.0.16",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.7",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.13",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.15",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
